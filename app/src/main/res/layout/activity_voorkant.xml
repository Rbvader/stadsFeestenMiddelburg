<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_voorkant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.stadsfeestenmiddelburg.bob.stadsfeesten.Voorkant"
    android:layout_gravity="center_horizontal|fill_horizontal"
    android:visibility="visible"
    android:background="@drawable/stadsfeest_v1"
    >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonRooster"
        android:shadowRadius="10"
        android:visibility="visible"
        android:textAlignment="gravity"
        android:background="@android:color/holo_red_light"
        android:radius="20dp"
        android:padding="5dp"
        android:text="Rooster"
        android:layout_marginBottom="53dp"
        android:minHeight="47dp"
        android:minWidth="99dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:elevation="7dp"
        android:fadingEdge="horizontal|vertical"
        android:soundEffectsEnabled="false"
        android:textColorLink="#f5a882" />

    <TextView
        android:text="Welkom!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/WelkomTxt"
        android:textStyle="normal|bold"
        android:textColor="?attr/colorPrimary"
        android:textSize="30sp" />


</RelativeLayout>

